{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "pre-build": {
      "dependsOn": ["^pre-build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "deploy": {
      "cache": true,
      "dependsOn": ["pre-build"],
      "persistent": true
    },
    "start": {
      "cache": true,
      "dependsOn": ["pre-build"],
      "persistent": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
